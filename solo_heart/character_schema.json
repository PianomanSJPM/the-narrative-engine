{
  "_attribution": "This work includes material from the System Reference Document 5.1 and is licensed under the Creative Commons Attribution 4.0 International License.",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SoloHeart Character Schema",
  "description": "A simple character data model for SoloHeart",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string", "default": "1.0.0" },
        "created_date": { "type": "string", "format": "date-time" },
        "creation_method": { "type": "string", "enum": ["step_by_step", "vibe_code", "manual"] }
      },
      "required": ["version", "created_date"]
    },
    "basic_info": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 100 },
        "race": { "type": "string", "enum": ["Human", "Elf", "Dwarf", "Halfling", "Dragonborn", "Gnome", "Half-Elf", "Half-Orc", "Tiefling"] },
        "class": { "type": "string", "enum": ["Barbarian", "Bard", "Cleric", "Druid", "Fighter", "Monk", "Paladin", "Ranger", "Rogue", "Sorcerer", "Warlock", "Wizard"] },
        "background": { "type": "string", "enum": ["Acolyte", "Criminal", "Folk Hero", "Haunted One", "Noble", "Sage", "Soldier", "Urchin"] },
        "level": { "type": "integer", "minimum": 1, "maximum": 20, "default": 1 }
      },
      "required": ["name", "race", "class", "level"]
    },
    "ability_scores": {
      "type": "object",
      "properties": {
        "strength": { "type": "integer", "minimum": 1, "maximum": 30, "default": 10 },
        "dexterity": { "type": "integer", "minimum": 1, "maximum": 30, "default": 10 },
        "constitution": { "type": "integer", "minimum": 1, "maximum": 30, "default": 10 },
        "intelligence": { "type": "integer", "minimum": 1, "maximum": 30, "default": 10 },
        "wisdom": { "type": "integer", "minimum": 1, "maximum": 30, "default": 10 },
        "charisma": { "type": "integer", "minimum": 1, "maximum": 30, "default": 10 }
      },
      "required": ["strength", "dexterity", "constitution", "intelligence", "wisdom", "charisma"]
    }
  },
  "required": ["metadata", "basic_info", "ability_scores"]
} 